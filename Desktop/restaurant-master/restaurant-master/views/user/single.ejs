<%- include('../base/header.ejs') -%>
<%- include('../base/navbar.ejs') -%>
<div class="container">

<%- include('../base/messages') -%>
        
            <div class="row mb-4">
                    <div class="col-md-12" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
                            <nav class="navbar navbar-expand-lg navbar-white">
                                    <ol class="navbar-nav">
                                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="/users/all">Utilisateurs</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Plus de details</li>
                                    </ol>
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                      <ul class="navbar-nav ml-auto">
                                            <li class="nav-item">
                                              <a class="nav-link btn btn-primary btn-sm mr-2 text-light" href="/users/all">All</a>
                                            </li>
                                            <li class="nav-item">
                                              <a class="nav-link btn btn-primary btn-sm mr-2 text-light" href="/users/new">Nouveau</a>
                                            </li>
                                        </ul>
                                    </div>
                              </nav>
                        </div>
                </div>
        

                <div class="row w-75 float-left">
                    <div class="col-md-12 p-4" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
                      <h2 class="display-5 text-muted">PLus de details</h2>
                      <hr>
                    <div class="row">
                        <div class="col-sm-12">
                          <p class="text-muted float-left w-25">Nom</p>
                          <p class="text-muted float-left"><%=user.Fname %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                          <p class="text-muted float-left w-25">Prenom</p>
                          <p class="text-muted float-left"><%=user.LName %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                          <p class="text-muted float-left w-25">Contact</p>
                          <p class="text-muted float-left"><%=user.Contact %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                          <p class="text-muted float-left w-25">Email</p>
                          <p class="text-muted float-left"><%=user.email %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                          <p class="text-muted float-left w-25">role</p>
                          <p class="text-muted float-left"><%=user.role %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                          <p class="text-muted float-left w-25">Cree le</p>
                          <p class="text-muted float-left"><%=user.created_at.toDateString()%></p>
                        </div>
                    </div>

        </div>
    </div>

        <div class="row w-25 float-right">
        <div class="col-md-12 p-4 ml-auto" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
            <div class="card" style="width: 100%;border:none;">
                <img src="/img/<%= user.avatar%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <a href="<%= '/users/edit/' + user.id %>" class="btn btn-primary">Edit</a>


                  <div class="float-right">

                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Supprimer</button>
                        
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Etes  vous sur ?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                              <p class="display-5">Cet utilisateur sera supprime</p>
      
                        <form  action="/users/delete" method="post">
                          <input type="hidden" name="id" value="<%=user.id%>">
                          <div class="form-group">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                          </div>
                        </form>
      
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        </div>

                </div>
            </div>
        </div>
</div>
        
    </div>
</div>
</div>
<%- include('../base/footer.ejs') -%>